{
  "expo": {
    "name": "Feedverse Beta",
    "slug": "mobile",
    "version": "1.0.7",
    "orientation": "portrait",
    "icon": "./assets/images/FeedverseIcon.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "notification":{
         "icon":"./assets/images/FeedverseIcon.png"
      },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fyambos.feedversemobiledev",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "softwareKeyboardLayoutMode": "resize",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "POST_NOTIFICATIONS",
        "VIBRATE"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/FeedverseIcon.png",
        "backgroundImage": "./assets/images/FeedverseIcon.png",
        "monochromeImage": "./assets/images/FeedverseIcon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.fyambos.feedversemobiledev",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/FeedverseIcon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/FeedverseIcon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#7c96ec",
          "dark": {
            "backgroundColor": "#7c96ec"
          }
        }
      ],
      "expo-sqlite",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "EXPO_PUBLIC_API_BASE_URL": "https://feedverse-production.up.railway.app",
      "router": {},
      "eas": {
        "projectId": "4d2a49b9-b885-447c-8a78-15387e49dd34"
      }
    }
  }
}
