SERVER_PORT=8080
# Legacy alias supported: DB_URL
DATABASE_URL='postgresql://[DB_USER]:[DB_PASSWORD]@[DB_HOST]/[DB_NAME]?sslmode=require&channel_binding=require'
DB_HOST='[DB_HOST]'
DB_NAME='[DB_NAME]'
DB_USER='[DB_USER]'
DB_PASSWORD='[DB_PASSWORD]'
DB_PORT=5432
# true/1/require enable TLS for Postgres connections
DB_SSLMODE=require
DB_CHANNELBINDING='require'
JWT_SECRET="[JWT_SECRET]"

# Cloudflare
R2_BUCKET='[BUCKET_NAME]'
R2_ACCOUNT_ID='[R2_ACCOUNT_ID]'
R2_ACCESS_KEY_ID='[R2_ACCESS_KEY_ID]'
R2_SECRET_ACCESS_KEY='[R2_SECRET_ACCESS_KEY]'
R2_PUBLIC_URL='[R2_PUBLIC_URL]'

# Expo
EXPO_PUBLIC_API_BASE_URL='[your ip or domain]' # EXPO_PUBLIC_API_BASE_URL='[your ip or domain]' npx expo start -c

# Notes:
# - Backend push uses Expo push service (no server key required).
# - If you later add Firebase Admin usage server-side, add your own env vars here.

# Observability (optional)
NODE_ENV=test
LOG_LEVEL=info
LOG_PRETTY=0
SENTRY_DSN=
SENTRY_ENVIRONMENT=test
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.0

# Security (optional)
CORS_ORIGINS=
TRUST_PROXY=1
BODY_SIZE_LIMIT=1mb

# Forgotten password and Account verification
ONE_TIME_CODE_SECRET=
EMAIL_FROM=
RESEND_API_KEY=
EMAIL_PROVIDER=resend
EMAIL_REPLY_TO=