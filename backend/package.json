{
  "name": "feedverse-api",
  "version": "1.0.0",
  "description": "API de l'application Feedverse",
  "main": "dist/cjs/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/cjs/server.js",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "npm run build:esm && npm run build:cjs",
    "predev": "tsc",
    "dev": "tsc -w & nodemon -q dist/cjs/server.js",
    "smoke:profile": "node scripts/smokeProfile.mjs",
    "lint": "eslint . --ext .ts",
    "test": "jest --config=jest.config.cjs"
  },
  "author": "Les YAMBOS",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.962.0",
    "@neondatabase/serverless": "^1.0.2",
    "@types/express": "^5.0.3",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.6.0",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "neonctl": "^2.19.0",
    "nodemon": "^3.1.10",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "supertest": "^7.1.4",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
